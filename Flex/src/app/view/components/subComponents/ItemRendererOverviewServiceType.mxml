<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[			
			import app.model.dict.DicGPSImage;
			
			import spark.components.Image;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				
				groupImage.removeAllElements();
				
				if(data.label == "武装巡逻")
				{					
					var image:Image = new Image;
					image.width = 30;
					image.height = 30;
					image.source = DicGPSImage.getImageClass("2",1);
					groupImage.addElement(image);
				}
				else if(data.label == "无GPS信号")
				{					
					image = new Image;
					image.width = 30;
					image.height = 30;
					image.source = DicGPSImage.getImageClass("2",0,"99");
					groupImage.addElement(image);
				}
				else
				{
					var arr:Array = data.imagelist.split(",");
					for each(var item:String in arr)
					{
						image = new Image;
						image.width = 30;
						image.height = 30;
						image.source = DicGPSImage.getImageClass(item);
						groupImage.addElement(image);
					}
				}
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" gap="0"/>
	</s:layout>
	
	<s:CheckBox mouseEnabled="false" selected="{data.isMapShow}"/>
	<s:HGroup id="groupImage" gap="-10">
	</s:HGroup>
	<s:Label text="{data.label}"/>
</s:ItemRenderer>
